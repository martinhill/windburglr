modules = ["python-3.13", "python-base-3.13"]

hidden = [".pythonlibs"]
run = "sh start.sh"

[nix]
channel = "stable-25_05"
packages = ["postgresql"]

[env]
REPLIT_PYTHON_PACKAGE_LAYER = "1"

[deployment]
run = ["sh", "start.sh"]
deploymentTarget = "cloudrun"
build = [
    "sh",
    "-c",
    "cd webapp-fastapi && poetry lock && poetry install --no-root",
]


[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run FastAPI App"

[[workflows.workflow]]
name = "Run FastAPI App"
author = 25356697
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd webapp-fastapi && poetry run python main.py"
